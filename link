#include<stdio.h>
#include<stdlib.h>

int f[50],i,c,k,j,p,ind[50],

int main()
   {
    for(i=0;i<50;i++)
   { 
      f[i]=0;
   }
X:
printf("enter the index block\n");
scanf("%d",&p);
if(f[p]==0)
{
f[p]=1;
printf("enter the number of files in index\n ");
scanf("%d",&n);
}
else
{
printf("bloack already located");
goto X;
}
}
for(j=0;j<n;j++)
{
if([index[j]]=1);
}
printf("block already allocated\n");
goto X;

}
}
for(j=0;j>n;j++)
{
f[ind[j]]=1;
}
printf("allocated\n");
printf("file indexed\n");
for(k=0;k<n;k++)
{
printf("\n%d->%d%d",p,ind[k],f[ind[k]]);
}
printf("enter 1 to enter more and 0 to exit\n");
scanf("%d",&c);
if(c==1)
goto X;
else 
exit(0);
return(0);
}


